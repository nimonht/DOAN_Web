@model List<Order>
@{
    ViewData["Title"] = "Đơn hàng của tôi";
}

<div class="container my-5">
    <h2 class="mb-4">Đơn hàng của tôi</h2>
    
    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-box-seam display-1 text-muted"></i>
            <h4 class="mt-3">Bạn chưa có đơn hàng nào</h4>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Mua sắm ngay</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var order in Model)
            {
                <div class="col-12 mb-3">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <div>
                                <strong>Mã đơn hàng: @order.OrderNumber</strong><br>
                                <small class="text-muted">@order.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                            </div>
                            <div>
                                @switch (order.Status)
                                {
                                    case "ChoThanhToan":
                                        <span class="badge bg-warning">Chờ thanh toán</span>
                                        break;
                                    case "DaXacNhan":
                                        <span class="badge bg-info">Đã xác nhận</span>
                                        break;
                                    case "DangGiao":
                                        <span class="badge bg-primary">Đang giao</span>
                                        break;
                                    case "HoanThanh":
                                        <span class="badge bg-success">Hoàn thành</span>
                                        break;
                                    case "DaHuy":
                                        <span class="badge bg-danger">Đã hủy</span>
                                        break;
                                }
                            </div>
                        </div>
                        <div class="card-body">
                            @foreach (var item in order.OrderItems)
                            {
                                <div class="d-flex mb-2">
                                    <img src="@item.Product.CoverImageUrl" alt="@item.Product.Title" 
                                         style="width: 50px; height: 60px; object-fit: cover;" class="me-3">
                                    <div class="flex-grow-1">
                                        <strong>@item.Product.Title</strong><br>
                                        <small class="text-muted">Số lượng: @item.Quantity x @item.UnitPrice.ToString("N0") ₫</small>
                                    </div>
                                </div>
                            }
                            <hr>
                            <div class="d-flex justify-content-between">
                                <div>
                                    <strong>Tổng tiền:</strong> <span class="text-danger">@order.Total.ToString("N0") ₫</span>
                                </div>
                                <div>
                                    @if (order.Status == "ChoThanhToan")
                                    {
                                        <a asp-controller="Checkout" asp-action="PaymentInstructions" asp-route-id="@order.OrderId" 
                                           class="btn btn-sm btn-primary">Thanh toán</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
