@model Product
@{
    ViewData["Title"] = Model.Title;
    var relatedProducts = ViewBag.RelatedProducts as List<Product>;
}

<div class="product-detail-page">
    <nav aria-label="breadcrumb" class="container mt-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            @if (Model.ProductCategories.Any())
            {
                var firstCategory = Model.ProductCategories.First().Category;
                <li class="breadcrumb-item"><a href="/danh-muc/@firstCategory.Slug">@firstCategory.Name</a></li>
            }
            <li class="breadcrumb-item active">@Model.Title</li>
        </ol>
    </nav>
    
    <!-- Image Carousel -->
    <div class="product-carousel-wrapper d-none d-md-block">
        <div id="productCarousel" class="carousel slide product-detail-carousel" data-bs-ride="carousel">
            <div class="carousel-indicators">
                @if (Model.ProductImages != null && Model.ProductImages.Any())
                {
                    @for (int i = 0; i < Math.Min(Model.ProductImages.Count, 6); i++)
                    {
                        <button type="button" data-bs-target="#productCarousel" data-bs-slide-to="@i" 
                                class="@(i == 0 ? "active" : "")" aria-label="Slide @(i + 1)"></button>
                    }
                }
                else
                {
                    <button type="button" data-bs-target="#productCarousel" data-bs-slide-to="0" 
                            class="active" aria-label="Slide 1"></button>
                }
            </div>
            <div class="carousel-inner">
                @if (Model.ProductImages != null && Model.ProductImages.Any())
                {
                    @for (int i = 0; i < Math.Min(Model.ProductImages.Count, 6); i++)
                    {
                        var image = Model.ProductImages.ElementAt(i);
                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            <img src="@image.ImageUrl" class="d-block w-100" alt="@Model.Title - Image @(i + 1)">
                        </div>
                    }
                }
                else
                {
                    <div class="carousel-item active">
                        <img src="@Model.CoverImageUrl" class="d-block w-100" alt="@Model.Title">
                    </div>
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>

    <!-- Mobile Layout - Column Flow -->
    <div class="container d-md-none mobile-product-layout">
        <!-- Mobile Image Section -->
        <div class="mobile-product-image">
            @if (Model.ProductImages != null && Model.ProductImages.Any())
            {
                <div id="mobileProductCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        @for (int i = 0; i < Math.Min(Model.ProductImages.Count, 6); i++)
                        {
                            <button type="button" data-bs-target="#mobileProductCarousel" data-bs-slide-to="@i" 
                                    class="@(i == 0 ? "active" : "")" aria-label="Slide @(i + 1)"></button>
                        }
                    </div>
                    <div class="carousel-inner">
                        @for (int i = 0; i < Math.Min(Model.ProductImages.Count, 6); i++)
                        {
                            var image = Model.ProductImages.ElementAt(i);
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <img src="@image.ImageUrl" class="d-block w-100" alt="@Model.Title - Image @(i + 1)">
                            </div>
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#mobileProductCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#mobileProductCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    </button>
                </div>
            }
            else
            {
                <img src="@Model.CoverImageUrl" class="w-100" alt="@Model.Title">
            }
        </div>

        <!-- Mobile Product Info Panel -->
        <div class="mobile-product-info">
            <h1 class="product-title">@Model.Title</h1>
            <p class="product-author">@Model.Author.Name</p>
            
            <div class="product-price">
                <span class="price-amount">@Model.Price.ToString("N0") ₫</span>
            </div>
            
            <!-- Stock Status -->
            <div class="stock-status">
                @if (Model.StockQty > 0)
                {
                    <span class="badge stock-available">
                        <i class="bi bi-check-circle"></i> Còn hàng (@Model.StockQty)
                    </span>
                }
                else
                {
                    <span class="badge stock-unavailable">
                        <i class="bi bi-x-circle"></i> Hết hàng
                    </span>
                }
            </div>
            
            <!-- Product Actions -->
            @if (Model.StockQty > 0)
            {
                <div class="product-actions">
                    <div class="quantity-selector">
                        <label class="form-label">Số lượng</label>
                        <div class="qty-controls">
                            <button class="btn-qty-decrease" type="button" id="mobile-decrease-qty">
                                <i class="bi bi-dash"></i>
                            </button>
                            <input type="number" class="qty-input" id="mobile-quantity" value="1" min="1" max="@Model.StockQty">
                            <button class="btn-qty-increase" type="button" id="mobile-increase-qty">
                                <i class="bi bi-plus"></i>
                            </button>
                        </div>
                    </div>
                    
                    <button class="btn-add-to-cart" id="mobile-add-to-cart" data-product-id="@Model.ProductId">
                        <i class="bi bi-cart-plus"></i>
                        <span>Thêm vào giỏ</span>
                    </button>
                </div>
            }
            
            <!-- Product Metadata -->
            <div class="product-metadata">
                <div class="metadata-item">
                    <span class="meta-label">Nhà xuất bản</span>
                    <span class="meta-value">@Model.Publisher</span>
                </div>
                @if (!string.IsNullOrEmpty(Model.ISBN))
                {
                    <div class="metadata-item">
                        <span class="meta-label">ISBN</span>
                        <span class="meta-value">@Model.ISBN</span>
                    </div>
                }
                @if (Model.PublicationDate.HasValue)
                {
                    <div class="metadata-item">
                        <span class="meta-label">Ngày xuất bản</span>
                        <span class="meta-value">@Model.PublicationDate.Value.ToString("dd/MM/yyyy")</span>
                    </div>
                }
                @if (Model.ProductCategories.Any())
                {
                    <div class="metadata-item">
                        <span class="meta-label">Danh mục</span>
                        <div class="meta-value categories">
                            @foreach (var pc in Model.ProductCategories)
                            {
                                <a href="/danh-muc/@pc.Category.Slug" class="category-tag">
                                    @pc.Category.Name
                                </a>
                            }
                        </div>
                    </div>
                }
            </div>
            
            <!-- Description -->
            <div class="product-description">
                <h6 class="section-title">Mô tả sản phẩm</h6>
                <p class="description-text">@Model.Description</p>
            </div>
            
            <!-- Reviews Summary -->
            @if (Model.Reviews.Any())
            {
                <div class="reviews-summary">
                    <h6 class="section-title">Đánh giá</h6>
                    <div class="rating-display">
                        <span class="rating-score">@Model.Reviews.Average(r => r.Rating).ToString("F1")</span>
                        <div class="rating-stars">
                            @for (int i = 0; i < 5; i++)
                            {
                                @if (i < Math.Round(Model.Reviews.Average(r => r.Rating)))
                                {
                                    <i class="bi bi-star-fill"></i>
                                }
                                else
                                {
                                    <i class="bi bi-star"></i>
                                }
                            }
                        </div>
                        <span class="review-count">(@Model.Reviews.Count đánh giá)</span>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Desktop Sticky Product Panel -->
    <div id="productStickyPanel" class="product-sticky-panel d-none d-md-block">
        <div class="sticky-panel-content">
            <div class="product-info">
                <h2 class="product-title">@Model.Title</h2>
                <p class="product-author">@Model.Author.Name</p>
                
                <div class="product-price">
                    <span class="price-amount">@Model.Price.ToString("N0") ₫</span>
                </div>
                
                <!-- Stock Status -->
                <div class="stock-status">
                    @if (Model.StockQty > 0)
                    {
                        <span class="badge stock-available">
                            <i class="bi bi-check-circle"></i> Còn hàng (@Model.StockQty)
                        </span>
                    }
                    else
                    {
                        <span class="badge stock-unavailable">
                            <i class="bi bi-x-circle"></i> Hết hàng
                        </span>
                    }
                </div>
                
                <!-- Product Actions -->
                @if (Model.StockQty > 0)
                {
                    <div class="product-actions">
                        <div class="quantity-selector">
                            <label class="form-label">Số lượng</label>
                            <div class="qty-controls">
                                <button class="btn-qty-decrease" type="button" id="panel-decrease-qty">
                                    <i class="bi bi-dash"></i>
                                </button>
                                <input type="number" class="qty-input" id="panel-quantity" value="1" min="1" max="@Model.StockQty">
                                <button class="btn-qty-increase" type="button" id="panel-increase-qty">
                                    <i class="bi bi-plus"></i>
                                </button>
                            </div>
                        </div>
                        
                        <button class="btn-add-to-cart" id="panel-add-to-cart" data-product-id="@Model.ProductId">
                            <i class="bi bi-cart-plus"></i>
                            <span>Thêm vào giỏ</span>
                        </button>
                    </div>
                }
                
                <!-- Product Metadata -->
                <div class="product-metadata">
                    <div class="metadata-item">
                        <span class="meta-label">Nhà xuất bản</span>
                        <span class="meta-value">@Model.Publisher</span>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.ISBN))
                    {
                        <div class="metadata-item">
                            <span class="meta-label">ISBN</span>
                            <span class="meta-value">@Model.ISBN</span>
                        </div>
                    }
                    @if (Model.PublicationDate.HasValue)
                    {
                        <div class="metadata-item">
                            <span class="meta-label">Ngày xuất bản</span>
                            <span class="meta-value">@Model.PublicationDate.Value.ToString("dd/MM/yyyy")</span>
                        </div>
                    }
                    @if (Model.ProductCategories.Any())
                    {
                        <div class="metadata-item">
                            <span class="meta-label">Danh mục</span>
                            <div class="meta-value categories">
                                @foreach (var pc in Model.ProductCategories)
                                {
                                    <a href="/danh-muc/@pc.Category.Slug" class="category-tag">
                                        @pc.Category.Name
                                    </a>
                                }
                            </div>
                        </div>
                    }
                </div>
                
                <!-- Description -->
                <div class="product-description">
                    <h6 class="section-title">Mô tả sản phẩm</h6>
                    <p class="description-text">@Model.Description</p>
                </div>
                
                <!-- Reviews Summary -->
                @if (Model.Reviews.Any())
                {
                    <div class="reviews-summary">
                        <h6 class="section-title">Đánh giá</h6>
                        <div class="rating-display">
                            <span class="rating-score">@Model.Reviews.Average(r => r.Rating).ToString("F1")</span>
                            <div class="rating-stars">
                                @for (int i = 0; i < 5; i++)
                                {
                                    @if (i < Math.Round(Model.Reviews.Average(r => r.Rating)))
                                    {
                                        <i class="bi bi-star-fill"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-star"></i>
                                    }
                                }
                            </div>
                            <span class="review-count">(@Model.Reviews.Count đánh giá)</span>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Related Products Section -->
    @if (relatedProducts != null && relatedProducts.Any())
    {
        <div class="related-products-section">
            <div class="container py-4">
                <h3 class="mb-4">Sản phẩm liên quan</h3>
                <div class="row g-4">
                    @foreach (var product in relatedProducts)
                    {
                        <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                            <a href="/sach/@product.Slug" class="text-decoration-none">
                                <div class="card product-card h-100 shadow-sm">
                                    <img src="@product.CoverImageUrl" class="card-img-top" alt="@product.Title" style="height: 200px; object-fit: cover;">
                                    <div class="card-body">
                                        <h6 class="card-title text-dark" style="font-size: 0.85rem; min-height: 2.5rem; overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;">
                                            @product.Title
                                        </h6>
                                        <p class="text-muted small mb-1">@product.Author.Name</p>
                                        <p class="text-danger fw-bold mb-0">@product.Price.ToString("N0") ₫</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Desktop carousel
            if ($('#productCarousel').length) {
                var carousel = new bootstrap.Carousel(document.getElementById('productCarousel'), {
                    interval: 3000,
                    ride: 'carousel'
                });
            }
            
            // Mobile carousel
            if ($('#mobileProductCarousel').length) {
                var mobileCarousel = new bootstrap.Carousel(document.getElementById('mobileProductCarousel'), {
                    interval: 3000,
                    ride: 'carousel'
                });
            }
            
            // Initialize desktop sticky panel only
            if (window.innerWidth >= 768) {
                initProductStickyPanel();
            }
            
            // Desktop panel quantity controls
            $('#panel-increase-qty').click(function() {
                var $input = $('#panel-quantity');
                var val = parseInt($input.val());
                if (val < @Model.StockQty) {
                    $input.val(val + 1);
                }
            });
            
            $('#panel-decrease-qty').click(function() {
                var $input = $('#panel-quantity');
                var val = parseInt($input.val());
                if (val > 1) {
                    $input.val(val - 1);
                }
            });
            
            // Mobile quantity controls
            $('#mobile-increase-qty').click(function() {
                var $input = $('#mobile-quantity');
                var val = parseInt($input.val());
                if (val < @Model.StockQty) {
                    $input.val(val + 1);
                }
            });
            
            $('#mobile-decrease-qty').click(function() {
                var $input = $('#mobile-quantity');
                var val = parseInt($input.val());
                if (val > 1) {
                    $input.val(val - 1);
                }
            });
            
            // Desktop panel add to cart
            $('#panel-add-to-cart').click(function() {
                addToCart($('#panel-quantity').val());
            });
            
            // Mobile add to cart
            $('#mobile-add-to-cart').click(function() {
                addToCart($('#mobile-quantity').val());
            });
            
            // Shared add to cart function
            function addToCart(quantity) {
                quantity = parseInt(quantity);
                $.ajax({
                    url: '/cart/them',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({
                        productId: @Model.ProductId,
                        quantity: quantity
                    }),
                    success: function(response) {
                        if (response.success) {
                            showToast('Đã thêm sản phẩm vào giỏ hàng', 'success');
                            updateCartCount();
                        } else {
                            showToast(response.message, 'error');
                        }
                    },
                    error: function() {
                        window.location.href = '/Account/DangNhap';
                    }
                });
            }
        });
    </script>
}
