@model ApplicationUser
@{
    ViewData["Title"] = "Chi tiết khách hàng";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Chi tiết khách hàng</h2>
        <a asp-action="Customers" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>
    
    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-person-circle"></i> Thông tin cá nhân</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="text-muted small">Họ và tên</label>
                        <p class="fw-bold mb-2">@Model.FullName</p>
                    </div>
                    
                    <div class="mb-3">
                        <label class="text-muted small">Email</label>
                        <p class="mb-2">
                            <i class="bi bi-envelope"></i> @Model.Email
                            @if (Model.EmailConfirmed)
                            {
                                <span class="badge bg-success ms-2">Đã xác thực</span>
                            }
                            else
                            {
                                <span class="badge bg-warning ms-2">Chưa xác thực</span>
                            }
                        </p>
                    </div>
                    
                    <div class="mb-3">
                        <label class="text-muted small">Số điện thoại</label>
                        <p class="mb-2">
                            <i class="bi bi-phone"></i> @(string.IsNullOrEmpty(Model.PhoneNumber) ? "Chưa cập nhật" : Model.PhoneNumber)
                        </p>
                    </div>
                    
                    <div class="mb-3">
                        <label class="text-muted small">Ngày đăng ký</label>
                        <p class="mb-2">
                            <i class="bi bi-calendar"></i> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                        </p>
                    </div>
                </div>
            </div>
            
            <div class="card mt-3">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-bar-chart"></i> Thống kê</h5>
                </div>
                <div class="card-body">
                    @{
                        var orders = ViewBag.Orders as List<Order>;
                        var totalOrders = orders.Count;
                        var completedOrders = orders.Count(o => o.Status == "HoanThanh");
                        var totalSpent = orders.Where(o => o.Status == "HoanThanh").Sum(o => o.Total);
                    }
                    
                    <div class="d-flex justify-content-between mb-3">
                        <span class="text-muted">Tổng đơn hàng</span>
                        <span class="fw-bold">@totalOrders</span>
                    </div>
                    
                    <div class="d-flex justify-content-between mb-3">
                        <span class="text-muted">Đơn hoàn thành</span>
                        <span class="fw-bold text-success">@completedOrders</span>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <span class="text-muted">Tổng chi tiêu</span>
                        <span class="fw-bold text-primary">@totalSpent.ToString("N0") ₫</span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-cart-check"></i> Lịch sử đơn hàng</h5>
                </div>
                <div class="card-body">
                    @if (orders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Mã đơn</th>
                                        <th>Ngày đặt</th>
                                        <th>Tổng tiền</th>
                                        <th>Trạng thái</th>
                                        <th>Số sản phẩm</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in orders)
                                    {
                                        <tr>
                                            <td><strong>#@order.OrderId</strong></td>
                                            <td>@order.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>@order.Total.ToString("N0") ₫</td>
                                            <td>
                                                @if (order.Status == "ChoThanhToan")
                                                {
                                                    <span class="badge bg-warning">Chờ thanh toán</span>
                                                }
                                                else if (order.Status == "DaXacNhan")
                                                {
                                                    <span class="badge bg-info">Đã xác nhận</span>
                                                }
                                                else if (order.Status == "DangGiao")
                                                {
                                                    <span class="badge bg-primary">Đang giao</span>
                                                }
                                                else if (order.Status == "HoanThanh")
                                                {
                                                    <span class="badge bg-success">Hoàn thành</span>
                                                }
                                                else if (order.Status == "DaHuy")
                                                {
                                                    <span class="badge bg-danger">Đã hủy</span>
                                                }
                                            </td>
                                            <td>@order.OrderItems.Sum(oi => oi.Quantity) sản phẩm</td>
                                            <td>
                                                <a asp-action="OrderDetail" asp-route-id="@order.OrderId" 
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i> Xem
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-cart-x display-1 text-muted"></i>
                            <p class="text-muted mt-3">Khách hàng chưa có đơn hàng nào</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
