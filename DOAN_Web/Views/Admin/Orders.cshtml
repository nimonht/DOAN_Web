@model List<Order>
@{
    ViewData["Title"] = "Quản lý đơn hàng";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Quản lý đơn hàng</h2>
    </div>
    
    <!-- Filter Tabs -->
    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <a class="nav-link @(ViewBag.SelectedStatus == null ? "active" : "")" asp-action="Orders">
                Tất cả
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(ViewBag.SelectedStatus == "ChoThanhToan" ? "active" : "")" 
               asp-action="Orders" asp-route-status="ChoThanhToan">
                Chờ thanh toán
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(ViewBag.SelectedStatus == "DaXacNhan" ? "active" : "")" 
               asp-action="Orders" asp-route-status="DaXacNhan">
                Đã xác nhận
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(ViewBag.SelectedStatus == "DangGiao" ? "active" : "")" 
               asp-action="Orders" asp-route-status="DangGiao">
                Đang giao
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(ViewBag.SelectedStatus == "HoanThanh" ? "active" : "")" 
               asp-action="Orders" asp-route-status="HoanThanh">
                Hoàn thành
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(ViewBag.SelectedStatus == "DaHuy" ? "active" : "")" 
               asp-action="Orders" asp-route-status="DaHuy">
                Đã hủy
            </a>
        </li>
    </ul>
    
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Mã đơn</th>
                            <th>Khách hàng</th>
                            <th>Số điện thoại</th>
                            <th>Tổng tiền</th>
                            <th>Trạng thái</th>
                            <th>Thanh toán</th>
                            <th>Ngày đặt</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>
                                    <span class="badge bg-light text-dark">@order.OrderNumber</span>
                                </td>
                                <td>
                                    <strong>@order.CustomerName</strong><br>
                                    <small class="text-muted">@order.User?.Email</small>
                                </td>
                                <td>@order.CustomerPhone</td>
                                <td class="fw-bold">@order.Total.ToString("N0") ₫</td>
                                <td>
                                    @switch (order.Status)
                                    {
                                        case "ChoThanhToan":
                                            <span class="badge bg-warning text-dark">Chờ thanh toán</span>
                                            break;
                                        case "DaXacNhan":
                                            <span class="badge bg-info">Đã xác nhận</span>
                                            break;
                                        case "DangGiao":
                                            <span class="badge bg-primary">Đang giao</span>
                                            break;
                                        case "HoanThanh":
                                            <span class="badge bg-success">Hoàn thành</span>
                                            break;
                                        case "DaHuy":
                                            <span class="badge bg-danger">Đã hủy</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    @if (order.PaymentProof != null)
                                    {
                                        if (order.PaymentProof.VerifiedAt != null)
                                        {
                                            <span class="badge bg-success">Đã xác nhận</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">Chờ xác nhận</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa có</span>
                                    }
                                </td>
                                <td>@order.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    <a asp-action="OrderDetail" asp-route-id="@order.OrderId" 
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> Chi tiết
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <p class="mt-3 text-muted">Không có đơn hàng nào</p>
                </div>
            }
        </div>
    </div>
</div>
